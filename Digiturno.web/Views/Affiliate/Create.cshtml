@model Digiturno.web.Data.Entities.Affiliate

@{
    ViewData["Title"] = "Registrar Afiliado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus-fill me-2"></i> Registrar Afiliado
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="direccion" class="form-label fw-semibold">
                                <i class="bi bi-geo-alt-fill me-2 text-primary"></i> Dirección
                            </label>
                            <input asp-for="direccion" class="form-control rounded-3" placeholder="Ingrese la dirección" />
                            <span asp-validation-for="direccion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-semibold">
                                <i class="bi bi-person-fill me-2 text-primary"></i> Nombre
                            </label>
                            <input asp-for="Nombre" class="form-control rounded-3" placeholder="Ingrese el nombre completo" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Documento" class="form-label fw-semibold">
                                <i class="bi bi-card-text me-2 text-primary"></i> Documento
                            </label>
                            <input asp-for="Documento" class="form-control rounded-3" placeholder="Ingrese el documento de identidad" />
                            <span asp-validation-for="Documento" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Telefono" class="form-label fw-semibold">
                                <i class="bi bi-telephone-fill me-2 text-primary"></i> Teléfono
                            </label>
                            <input asp-for="Telefono" class="form-control rounded-3" placeholder="Ingrese el número de teléfono" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-primary px-4 shadow-sm">
                                <i class="bi bi-save2-fill me-2"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

