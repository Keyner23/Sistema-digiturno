@model Digiturno.web.Data.Entities.Affiliate

@{
    ViewData["Title"] = "Detalles del Afiliado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg border-0" style="width: 28rem;">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Detalles del Afiliado</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-5 fw-bold text-secondary">Nombre:</dt>
                <dd class="col-sm-7">@Model.Nombre</dd>

                <dt class="col-sm-5 fw-bold text-secondary">Documento:</dt>
                <dd class="col-sm-7">@Model.Documento</dd>

                <dt class="col-sm-5 fw-bold text-secondary">Dirección:</dt>
                <dd class="col-sm-7">@Model.direccion</dd>

                <dt class="col-sm-5 fw-bold text-secondary">Teléfono:</dt>
                <dd class="col-sm-7">@Model.Telefono</dd>
            </dl>
        </div>
        <div class="card-footer bg-white d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
           
        </div>
    </div>
</div>