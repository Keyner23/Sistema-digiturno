@model IEnumerable<Digiturno.web.Data.Entities.Affiliate>

@{
    ViewData["Title"] = "Dashboard Funcionario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">
            <i class="bi bi-people-fill me-2"></i> Dashboard Funcionario
        </h1>
        
        <form asp-action="Delete" method="post" class="d-flex gap-2 mt-2">
            <input type="text" name="documento" class="form-control w-50" placeholder="Documento a eliminar" required />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Eliminar
            </button>
        </form>
        

        
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-person-plus-fill me-1"></i> Nuevo Afiliado
        </a>
        
        <a asp-controller="Turn" asp-action="index" class="btn btn-warning shadow-sm">
            <i class="bi bi-ticket-perforated-fill"></i> Turnos
        </a>

        
        
        
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.direccion)</th>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Documento)</th>
                        <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.direccion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Documento)</td>
                            <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                            <td class="text-center">
                                @* <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-warning me-1"> *@
                                @*     <i class="bi bi-pencil-fill"></i> Editar *@
                                @* </a> *@
                                <a asp-action="Details" asp-route-id="@item.id" class="btn btn-sm btn-info text-white me-1">
                                    <i class="bi bi-eye-fill"></i> Detalles
                                </a>
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
