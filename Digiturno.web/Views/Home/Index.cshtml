@{
    ViewData["Title"] = "Bienvenido - Digiturno Restaurante";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="text-center">
        <i class="bi bi-house-fill text-primary" style="font-size: 5rem;"></i>
        <h1 class="mb-4 mt-3 display-5 fw-bold text-primary">Bienvenido al Sistema de Turnos</h1>
        <p class="text-muted mb-5 fs-5">Gestione y tome turnos fácilmente en nuestro restaurante.</p>

        <div class="d-flex justify-content-center gap-4">
            <a asp-controller="Affiliate" asp-action="Index"
               class="btn btn-primary btn-lg px-5 py-3 rounded-4 shadow-sm">
                <i class="bi bi-person-badge-fill fs-3 me-2"></i> Funcionario
            </a>

            <a asp-controller="Turn" asp-action="create"
               class="btn btn-warning btn-lg px-5 py-3 rounded-4 shadow-sm">
                <i class="bi bi-ticket-perforated-fill fs-3 me-2"></i> Tomar Turno
            </a>
        </div>
    </div>
</div>